package com.normsoule.pixelblitz.layers
{
	/**
	 * The BgGradient class defines constants for working with BGLayer instances.
	 */
	public final class BgGradient
	{
		/**
		 * Constant for a left to right gradient.
		 * <p>
		 * The first color in the gradient will be mapped to the left 
		 * and the second color will be mapped to the right.
		 **/
		public static const HORIZONTAL:int = 6;
		
		/**
		 * Constant for a top to bottom gradient.
		 * <p>
		 * The first color in the gradient will be mapped to the top 
		 * and the second color will be mapped to the bottom.
		 **/
		public static const VERTICAL:int = 2;
		
		/**
		 * @private
		 */
		public final function BgGradient()
		{
		}
	}
}